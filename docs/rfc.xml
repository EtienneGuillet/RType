        <author fullname="Lilian ARAGO" initials="L." surname="ARAGO">
            <organization abbrev="EPITECH">EPITECH</organization>
            <address>
                <email>lilian.arago@epitech.eu</email>
            </address>
        </author>

        <author fullname="Julian FRABEL" initials="J." surname="FRABEL">
